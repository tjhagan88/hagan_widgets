<% @page_title = "Add Items Page" %>

<br>
<br>
<h2>My Order</h2>


<div class="content">

  <br>
  <h4>Add Items</h2>
  <hr>

  <%= form_for(:widget, :url => {:controller => 'widgets', :action => 'create'}) do |f| %>

    <table class="table table-bordered table-striped">
      <tr>
          <th><%= f.label("Type") %></th>
          <td><%= f.select(:wigtype, ["", "Widget", "Widget Pro", "Widget Xtreme"]) %></td>
     </tr>
      <tr>
        <th><%= f.label(:color) %></th>
        <td><%= f.select(:color, ["", "red", "blue", "yellow"]) %></td>
      </tr>
      <tr>
        <th><%= f.label(:quantity) %></th>
        <td><%= f.text_field(:quantity) %>
          <% if !@widget.blank? then %>
            <% if @widget.errors[:quantity] then %>
             <% @widget.errors.full_messages_for(:quantity).each do |msg| %>
                <div class="alert-danger"><%= msg %></div>
             <% end %>
            <% end %>
          <% end %>
        </td>
      </tr>
  </table>
  
   <div class="actions">
        <%= submit_tag( "Add Widgets (+)", class: 'btn btn-primary' ) %> 
    </div>
 
 <% end %>

</div> 